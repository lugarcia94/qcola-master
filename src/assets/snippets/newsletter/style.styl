.newsletter 
    container: viewport 
    margin: (gutter) auto

    &__container 
        padding: (gutter) 0 
        border-top: solid 1px rgba(0,0,0,.1)
        border-bottom: solid 1px rgba(0,0,0,.1)

    &__header 
        text-align: center
        margin-bottom: (gutter / 2)

    &__title 
        font-size: 22px
        font-weight: bold 
        line-height: 1.2

        span 
            display: block
            font-size: 26px

    &__form 
        margin: -5px

    &__box, &__actions
        padding: 5px 

    &__description 
        font-size: 14px

    &__input, &__button
        width: 100% 

    &__button 
        padding: 0 (gutter / 2)

    &--footer 
        margin-bottom: 0
        .newsletter 
            &__container 
                padding: 0
                border: 0

            &__title
                font-size: 18px
                font-weight: bold 
                letter-spacing: 2px

            &__description 
                color: #8C8C8C

            &__input 
                border-radius: 4px
                box-shadow: 0 0 10px rgba(0,0,0,.5)
                color: #333

            &__button
                border-radius: 4px
                font-size: 14px
                font-weight: regular 
                text-transform: uppercase 
                letter-spacing: 2px
    &--custom 
        border-radius: 6px
        padding: 30px 
        

        .newsletter 
            &__container 
                border: 0 
                padding: 0

            &__title 
                font-size: 28px
                font-weight: bold 
                letter-spacing: 1px
                color: #fff

                max-width: 454px

            &__input 
                height: 42px
                background: none 
                border: 0

            &__box 
                flex: 1 
                min-width: 0

            &__form
                display: flex 
                background: #fff 
                border-radius: 6px

            &__actions 
                flex: 0 0 155px

            &__button
                height: 42px
                background: none 
                font-size: 16px
                font-weight: bold 
                text-transform: uppercase 
                letter-spacing: 2px

@media (min-width: 768px)
    .newsletter
        &__form
            display: flex 
            justify-content: center
            align-items: center

        &__box
            flex: 1
            min-width: 0

@media (min-width: 992px)
    .newsletter 
        &__container 
            display: flex 
            justify-content: space-between
            align-items: center
        
        &__header 
            display: flex 
            justify-content: space-between
            align-items: center
            margin: 0 -(gutter / 2)
            text-align: left
            
        &__title, &__description, &__box, &__actions
            padding: (gutter / 2)

        &__main 
            flex: 1
            min-width: 0
            margin-left: gutter

        &--footer
            .newsletter 
                &__header 
                    display: block
                    margin: 0
                &__title, &__description
                    padding: 0

        

.return__json 
    bottom: 5px
    text-align: right
    color: #fff
    text-transform: uppercase
    position: absolute
    right: 27px
    font-size: 12px
  

.newsletter--custom
    position relative


// lightbox
.lightbox 
  &-out 
    align-items: center
    background: rgba(0, 0, 0, 0.8)
    bottom: 0
    display: flex
    height: 100%
    justify-content: center
    left: 0
    position: fixed
    right: 0
    top: 0
    z-index: 10000

    &.hidden 
      display: none !important
    

      .input-news 
        font-size: 14px
        height: 40px
        letter-spacing: .4px
        line-height: 40px
        padding: 14px 10px
        margin-top: 20px
        width: 75%
        border-radius: 2px

        @media(max-width: 992px)
          display: block !important
          margin: 0 auto
          width: 90%
        
    
      button 
        background-color: #000
        border: 1px solid transparent
        border-radius: 2px
        bottom: 11px
        color: #000
        line-height: 48px
        margin-top: 2px
        position: absolute
        transition: all 150ms ease-in-out
        right: 70px
        width: 68px
        height: 38px
      
        &:hover 
          background-color: white
          border-color: #000
          color: #000

          .lightbox__icon
            fill: #000
          
        

        @media(max-width: 992px)
          position: static
        

    
    .input-aviso
      color: white
      font-size: 16px
      margin-top: 30px
      display: block
    
  

  &__wrapper 
    background: none
    display: block
    height: auto
    overflow: hidden
    padding: 33px 40px
    position: relative
    text-align: center
    width: auto

    &:after
     
      bottom: 60px
      content: ""
      display: block
      height: 380px
      position: absolute
      right: 0
      width: 285px

      @media(max-width: 1119px)
        display: none
      
    

    @media(max-width: 1199px) 
      height: auto
      width: 80vw
    
    @media(max-width: 991px)
      padding: 33px 0px
      width: 90vw

      .lightbox__body--header
        height: 260px
      
      .lightbox__body--title
        font-size: 19px
        max-width: 100%
        padding: 20px 10px
      

      .lightbox__close
        right: 10px
      
    

    @media(max-width: 375px)
      .lightbox__close
        top: 20%
      
    
  &__close 
    align-items: center
    background: #000
    border-radius: 30px
    color: #000
    cursor: hand
    cursor: pointer
    display: flex
    font-family: $font-family2
    font-size: 18px
    font-weight: 900
    height: 30px
    justify-content: center
    position: absolute
    right: 40px
    top: 0px
    width: 30px
    z-index: 10007

    &--second
      color: #000
      cursor: pointer
      font-size: 14px
      line-height: 1.5
      text-decoration: underline
    
  

  &__icon 
    fill: white
    height: 20px
    width: 20px
  

  &__body  
    height: 540px
    text-align: center
    position: relative
    width: 825px

    @media(max-width: 992px)
      height: auto
      width: auto
      background-size: 100%!important
      background-repeat: no-repeat!important
      background-position: center!important
    

    &--header
      align-items: flex-end
      display: flex
      height: 430px
      line-height: 1

      @media(max-width: 992px)
        line-height: 2
        padding-top: 35px
        padding-bottom: 0 !important
      
    
    &--footer
      align-items: center
      background: $blue
      display: flex
      height: 110px
    

    &--title
      color: #000
      font-size: 33px
      font-weight: 600
      line-height: 1.06
      letter-spacing: 1.2px
      max-width: 635px
      padding: 20px 50px
      text-align: left
      text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5)
    
  

  &__form
    padding: 0 40px

    @media(max-width: 991px)
      display: block !important
      line-height: 1
      width: 100%
      max-width: 100%
      padding: 0 15px
    

    .newsletter__button
      height: 40px
      line-height: 1
      margin: 0
      padding: 0 15px
      right: 0
      text-align: center
      top: 0
      width: auto

      @media(max-width: 991px)
        width: 100%
        margin-top: 10px
      

      &:hover
        svg
          fill: #000
        
      

      svg
        fill: #000
      
    
  

  &__input
    display: flex
  

// end lightbox