.newsletter 
    container: viewport 
    margin: (gutter) auto

    &__container 
        padding: (gutter) 0 
        border-top: solid 1px rgba(0,0,0,.1)
        border-bottom: solid 1px rgba(0,0,0,.1)

    &__header 
        text-align: center
        margin-bottom: (gutter / 2)

    &__title 
        font-size: 22px
        font-weight: bold 
        line-height: 1.2

        span 
            display: block
            font-size: 26px

    &__form 
        margin: -5px

    &__box, &__actions
        padding: 5px 

    &__description 
        font-size: 14px

    &__input, &__button
        width: 100% 

    &__button 
        padding: 0 (gutter / 2)

    &--footer 
        margin-bottom: 0
        .newsletter 
            &__container 
                padding: 0
                border: 0

            &__title
                font-size: 18px
                font-weight: bold 
                letter-spacing: 2px

            &__description 
                color: #8C8C8C

            &__input 
                border-radius: 4px
                box-shadow: 0 0 10px rgba(0,0,0,.5)
                color: #333

            &__button
                border-radius: 4px
                font-size: 14px
                font-weight: regular 
                text-transform: uppercase 
                letter-spacing: 2px
    &--custom 
        border-radius: 6px
        padding: 30px 
        

        .newsletter 
            &__container 
                border: 0 
                padding: 0

            &__title 
                font-size: 28px
                font-weight: bold 
                letter-spacing: 1px
                color: #fff

                max-width: 454px

            &__input 
                height: 42px
                background: none 
                border: 0

            &__box 
                flex: 1 
                min-width: 0

            &__form
                display: flex 
                background: #fff 
                border-radius: 6px

            &__actions 
                flex: 0 0 155px

            &__button
                height: 42px
                background: none 
                font-size: 16px
                font-weight: bold 
                text-transform: uppercase 
                letter-spacing: 2px

@media (min-width: 768px)
    .newsletter
        &__form
            display: flex 
            justify-content: center
            align-items: center

        &__box
            flex: 1
            min-width: 0

@media (min-width: 992px)
    .newsletter 
        &__container 
            display: flex 
            justify-content: space-between
            align-items: center
        
        &__header 
            display: flex 
            justify-content: space-between
            align-items: center
            margin: 0 -(gutter / 2)
            text-align: left
            
        &__title, &__description, &__box, &__actions
            padding: (gutter / 2)

        &__main 
            flex: 1
            min-width: 0
            margin-left: gutter

        &--footer
            .newsletter 
                &__header 
                    display: block
                    margin: 0
                &__title, &__description
                    padding: 0

        

.return__json 
    bottom: 5px
    text-align: right
    color: #fff
    text-transform: uppercase
    position: absolute
    right: 27px
    font-size: 12px
  

.newsletter--custom
    position relative


// lightbox
.lightbox 
  &-out 
    align-items: center
    background: rgba(0, 0, 0, 0.8)
    bottom: 0
    display: flex
    height: 100%
    justify-content: center
    left: 0
    position: fixed
    right: 0
    top: 0
    z-index: 10000

    &.hidden 
      display: none !important
    

      .input-news 
        font-size: 14px
        height: 40px
        letter-spacing: .4px
        line-height: 40px
        padding: 14px 10px
        margin-top: 20px
        width: 75%
        border-radius: 2px

        @media(max-width: 992px)
          display: block !important
          margin: 0 auto
          width: 90%
        
    
      button 
        background-color: #000
        border: 1px solid transparent
        border-radius: 2px
        bottom: 11px
        color: #000
        line-height: 48px
        margin-top: 2px
        position: absolute
        transition: all 150ms ease-in-out
        right: 70px
        width: 68px
        height: 38px
      
        &:hover 
          background-color: white
          border-color: #000
          color: #000

          .lightbox__icon
            fill: #000
          
        

        @media(max-width: 992px)
          position: static
        

    
    .input-aviso
      color: white
      font-size: 16px
      margin-top: 30px
      display: block
    
  

  &__wrapper 
    background: none
    display: block
    height: auto 
    position: relative
    text-align: center
    width: 100%
    max-width 470px
    height: 470px
    border-radius: 50%
    background: #fff
    border: 5px solid #49bfc1

    @media(max-width: 375px)
      height: 375px

    @media(max-width: 320px)
      height: 320px

.lightbox__body--header 
    span
      font-size: 40px
      display: block
      color: #49bfc2
      font-weight: 700
      margin: 20px 0

      @media(max-width: 375px)
          font-size: 30px
          margin: 10px 0
          line-height: 30px

    img 
      margin-top: -40px

    p
      font-size: 18px
      color: #666666
      max-width: 72%
      margin: 0 auto
      line-height: 20px
      margin-bottom: 20px

      @media(max-width: 375px)
        font-size: 15px
        color: #666
        max-width: 100%
        margin: 0 auto
        line-height: 17px
        margin-bottom: 0

 
.lightbox__body--footer
  .newsletter__form
    margin: 0
    flex-wrap: wrap
    max-width: 330px
    margin: 0 auto
    margin-top 20px

    @media(max-width: 375px)
      max-width 70%

  .newsletter__button  
    background: #49bfc1
    max-width: 190px
    font-size: 20px
    text-transform: uppercase
    font-weight: 700
    border-radius: 12px
    margin: 10px auto

    @media(max-width: 320px)
        max-width: 60%

    &:hover
      opacity .8

.lightbox__close 
    position: absolute
    right: 0
    font-size: 30px
    color: #49bfc1
    font-weight: 700
    cursor pointer

// end lightbox